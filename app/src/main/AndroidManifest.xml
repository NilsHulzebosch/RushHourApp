<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nils.rushhour">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayOverviewActivity"
            android:label="LEVEL OVERVIEW"> </activity>
        <activity android:name=".AchievementsActivity"
            android:label="MY ACHIEVEMENTS"> </activity>
        <activity
            android:name=".InstructionsActivity"
            android:label="INSTRUCTIONS"> </activity>

    </application>

</manifest>